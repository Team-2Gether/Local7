<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.twogether.local7.post.dao.ImageDAO">

    <resultMap id="imageResultMap" type="com.twogether.local7.post.vo.ImageVO">
        <id property="imageId" column="IMAGE_ID"/>
        <result property="postId" column="POST_ID"/>
        <result property="imageUrl" column="IMAGE_URL"/>
        <result property="createdDate" column="CREATED_DATE"/>
        <result property="createdId" column="CREATED_ID"/>
        <result property="updatedDate" column="UPDATED_DATE"/>
        <result property="updatedId" column="UPDATED_ID"/>
    </resultMap>

    <insert id="insertImage" parameterType="com.twogether.local7.post.vo.ImageVO">
        <selectKey keyProperty="imageId" resultType="long" order="BEFORE">
            SELECT SEQ_TB_POST_IMAGE.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO TB_POST_IMAGE (
        IMAGE_ID, POST_ID, IMAGE_URL, CREATED_DATE, CREATED_ID, UPDATED_DATE, UPDATED_ID
        ) VALUES (
        #{imageId}, #{postId}, #{imageUrl}, SYSTIMESTAMP, #{createdId}, SYSTIMESTAMP, #{updatedId}
        )
    </insert>

    <select id="getImagesByPostId" resultMap="imageResultMap">
        SELECT
        IMAGE_ID, POST_ID, IMAGE_URL, CREATED_DATE, CREATED_ID, UPDATED_DATE, UPDATED_ID
        FROM TB_POST_IMAGE
        WHERE POST_ID = #{postId}
        ORDER BY IMAGE_ID ASC
    </select>

    <delete id="deleteImagesByPostId" parameterType="long">
        DELETE FROM TB_POST_IMAGE
        WHERE POST_ID = #{postId}
    </delete>

</mapper>
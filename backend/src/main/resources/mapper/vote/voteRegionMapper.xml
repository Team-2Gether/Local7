<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.twogether.local7.vote.dao.VoteRegionDAO">

    <resultMap id="voteRegionMap" type="com.twogether.local7.vote.vo.VoteVO">
        <id property="regionId" column="REGION_ID"/>
        <result property="krName" column="krName"/>
    </resultMap>

    <select id="getAllRegions" resultMap="voteRegionMap">
        SELECT REGION_ID,
        SUBSTR(REGION_DESCRIPTION, 1, 2) AS krName
        FROM TB_REGION
        ORDER BY REGION_ID
    </select>

</mapper>